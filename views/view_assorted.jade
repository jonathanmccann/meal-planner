extends layout

block content
  div(class="container")
    header(class="major")
      h2= title
  div(class="container")
    if assortedItems.length == 0
      header(class='major')
        p
          | There are currently no assorted items to display. Go ahead and 
          a(href="/add-assorted") add some
          | .
    else
      div(class="indent")
        ul(class="alt")
          each assortedItem in assortedItems
            li: a(href="/edit-assorted/#{assortedItem.assortedId}") #{assortedItem.itemName}