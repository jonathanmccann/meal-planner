extends layout

block content
  div(class="container")
    header(class="major")
      h2= title
  div(class="container")
    if categoryRecipes == null
      | There are currently no recipes to choose from. Go ahead and
      a(href="/add-recipe") add some
      | .
    else
      form(action='/add-meals', method='post')
        -for (var categoryRecipe in categoryRecipes)
          h2 #{categoryRecipe}
          div(class="indent")
            ul(class="alt")
              -for (var i = 0; i < categoryRecipes[categoryRecipe].length; i++) {
                li
                  input(type="checkbox", id="#{categoryRecipes[categoryRecipe][i].recipeId}", name="#{categoryRecipes[categoryRecipe][i].recipeId}")
                  label(for="#{categoryRecipes[categoryRecipe][i].recipeId}") #{categoryRecipes[categoryRecipe][i].name}
              -}
        br
        input(type='submit', value='Add Meals')