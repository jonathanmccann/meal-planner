extends layout

block content
  div(class="container")
    header(class="major")
      h2= title
  div(class="container")
    form(action='/edit-category', method='post')
      input(type="hidden", name="categoryId", value="#{categoryId}")
      | Category Name:
      input(type="text", name="name", value="#{name}", required)
      br
      input(type='submit', name='action', value='Edit Category')
      input(type='submit', class="delete-button", name='action', value='Delete Category')